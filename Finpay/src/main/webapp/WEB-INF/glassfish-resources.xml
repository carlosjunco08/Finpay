<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE resources PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Resource Definitions//EN" "http://glassfish.org/dtds/glassfish-resources_1_5.dtd">
<resources>
    <jdbc-connection-pool 
        name="mysql_finpay_db_rootPool" 
        res-type="javax.sql.DataSource" 
        datasource-classname="com.mysql.cj.jdbc.MysqlDataSource">
        
        <property name="serverName" value="localhost"/>
        <property name="portNumber" value="3306"/>
        <property name="databaseName" value="finpay_db"/>
        <property name="User" value="root"/>
        <property name="Password" value=""/>
        <property name="URL" value="jdbc:mysql://localhost:3306/finpay_db?zeroDateTimeBehavior=CONVERT_TO_NULL&amp;useSSL=false"/>
        <property name="driverClass" value="com.mysql.cj.jdbc.Driver"/>
        
        <property name="MaxPoolSize" value="32"/>
        <property name="SteadyPoolSize" value="8"/>
        <property name="MaxWaitTimeInMillis" value="60000"/>
        
    </jdbc-connection-pool>
    
    <jdbc-resource 
        enabled="true" 
        jndi-name="java:app/jdni_finpay_db" 
        pool-name="mysql_finpay_db_rootPool"/>
</resources>